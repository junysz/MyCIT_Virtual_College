<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="ie.cork.mycit.settings.HomePageSettings"
android:background="@drawable/background_blue">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="0,1" >

        <TableRow>
            android:layout_width="fill_parent"
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Customize Home Page "
                android:id="@+id/textView"
                android:textColor="#ffffffff" />
        </TableRow>

        <TableRow>
            android:layout_width="fill_parent"
            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/cb1"
                android:id="@+id/checkBox1"
                android:textColor="#ffffffff"
                android:checked="false" />
        </TableRow>

        <TableRow>
            android:layout_width="fill_parent"
            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/cb2"
                android:id="@+id/checkBox2"
                android:textColor="#ffffffff"
                android:checked="false" />
        </TableRow>

        <TableRow>
            android:layout_width="fill_parent"
            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/cb3"
                android:id="@+id/checkBox3"
                android:textColor="#ffffffff"
                android:checked="false" />
        </TableRow>

        <TableRow>
            android:layout_width="fill_parent"
            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/cb4"
                android:id="@+id/checkBox4"
                android:textColor="#ffffffff"
                android:checked="false" />
        </TableRow>

        <TableRow>
            android:layout_width="fill_parent"
            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/cb5"
                android:id="@+id/checkBox5"
                android:textColor="#ffffffff"
                android:checked="false" />
        </TableRow>

        <TableRow>
            android:layout_width="fill_parent"
            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/cb6"
                android:id="@+id/checkBox6"
                android:textColor="#ffffffff"
                android:checked="false" />
        </TableRow>

        <TableRow>
            android:layout_width="fill_parent"
            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/cb7"
                android:id="@+id/checkBox7"
                android:textColor="#ffffffff"
                android:checked="false" />
        </TableRow>

        <TableRow>
            android:layout_width="fill_parent"
            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/cb8"
                android:id="@+id/checkBox8"
                android:textColor="#ffffffff"
                android:checked="false" />
        </TableRow>

        <TableRow>
            android:layout_width="fill_parent"
            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/cb9"
                android:id="@+id/checkBox9"
                android:textColor="#ffffffff"
                android:checked="false" />
        </TableRow>

        <TableRow>
            android:layout_width="fill_parent"
            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/cb10"
                android:id="@+id/checkBox10"
                android:textColor="#ffffffff"
                android:checked="false" />
        </TableRow>

        <TableRow>
            android:layout_width="fill_parent"
            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/cb11"
                android:id="@+id/checkBox11"
                android:textColor="#ffffffff"
                android:checked="false" />
        </TableRow>

        <TableRow>
            android:layout_width="fill_parent"

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/saveButton"
                android:id="@+id/buttonSave"
                android:gravity="center"
                android:onClick="save"
                android:layout_column="0"
                android:textColor="#ffffffff" />
        </TableRow>

    </TableLayout>
</RelativeLayout>

</ScrollView>
